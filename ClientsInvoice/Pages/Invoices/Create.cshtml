@page
@model ClientsInvoice.Pages.Invoices.CreateModel

<h4>Invoice header</h4>
<hr />

<div class="col-md-12">
    <form method="post">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-4">
                <label class="control-label">Customer</label>
                <select asp-for="InvoiceVM.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="InvoiceVM.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="InvoiceVM.SubTotal" class="control-label">Sub Total</label>
                <input asp-for="InvoiceVM.SubTotal" class="form-control" disabled />
            </div>
            <div class="form-group col-md-2">
                <label asp-for="InvoiceVM.TotalItbis" class="control-label">Total Itbis</label>
                <input asp-for="InvoiceVM.TotalItbis" class="form-control" disabled />
            </div>
            <div class="form-group col-md-2">
                <label asp-for="InvoiceVM.Total" class="control-label">Price</label>
                <input asp-for="InvoiceVM.Total" class="form-control" disabled />
            </div>
            <div class="form-group col-md-2">
                @*<input type="submit" asp-page-handler="detail" value="Add" class="btn btn-primary" />*@
            </div>
        </div>
    </form>
</div>

<partial name="InvoiceDetailCreate" model="@Model.InvoiceDetailVM" />

<partial name="InvoiceDetailList" model="@Model.InvoiceDetails" />

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
